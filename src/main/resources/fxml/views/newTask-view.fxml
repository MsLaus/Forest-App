<AnchorPane prefHeight="800.0" prefWidth="600.0" styleClass="green-background" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mslaus.forestapp.controllers.viewControllers.NewTaskController">
    <children>
        <VBox alignment="BOTTOM_CENTER" prefHeight="800.0" prefWidth="604.0" spacing="30.0" styleClass="yellow-background" stylesheets="@../../stylesheet.css">
