            <ImageView fitHeight="86.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/taskDone.png" />
               </image>
            </ImageView>
            <Label text="Manage your time by adding tasks!">
               <font>
                  <Font name="Times New Roman" size="22.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="593.0" prefWidth="604.0" spacing="40.0" style="-fx-background-radius: 60 60 0 0;">
               <styleClass>
                  <String fx:value="green-background" />
                  <String fx:value="vbox" />
               </styleClass>
               <children>
                  <Label styleClass="shadow" stylesheets="@../../stylesheet.css" text="Title" textFill="#f5f599">
                     <font>
                        <Font name="Times New Roman" size="30.0" />
                     </font></Label>
