                    <children>
                        <Label fx:id="title" alignment="CENTER" prefHeight="18.0" prefWidth="490.0" text="Junior">
                            <VBox.margin>
                                <Insets left="20.0" top="10.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="description" alignment="CENTER" prefHeight="42.0" prefWidth="448.0" text="You entered 3 days in a row.">
